generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CostCategory {
  CLOUD
  SAAS
  HARDWARE
  SOFTWARE
  NETWORKING
  SECURITY
  OTHER
}

enum BillingFrequency {
  MONTHLY
  QUARTERLY
  ANNUALLY
  ONE_TIME
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  itCosts   ITCost[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("users")
}

model ITCost {
  id              String          @id @default(cuid())
  serviceName     String
  amount          Decimal
  category        CostCategory
  billingDate     DateTime
  billingFrequency BillingFrequency
  userId          String
  metadata        Json?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  user            User            @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([billingDate])
  @@index([category])
  @@map("it_costs")
}
